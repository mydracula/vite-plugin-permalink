{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Node",
    "strict": true,
    "declaration": true,
    "sourceMap": false,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "lib": ["ESNext"],
    "rootDir": "./src"
  },
  "include": ["src/*", "*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
